{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(cat:*)",
      "Bash(touch:*)",
      "Bash(grep:*)",
      "Bash(curl:*)",      
      "Bash(chmod:*)",      
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)"
    ],
    "deny": [],
    "autoApprovePatterns": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(pwd:*)",
      "Bash(ls:*)",
      "Bash(cd:* && git status:*)"  // Add here for auto-approval
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": []
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/arthurmin/.local/bin/uv run ~/.claude/hooks/macos_notification.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/arthurmin/.local/bin/uv run ~/.claude/hooks/macos_notification.py"
          }
        ]
      }
    ]
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754026501149
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  }
}