{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(tree:*)",
      "Bash(~/.claude/find-todo-files.sh:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(cat:*)",
      "Bash(touch:*)",
      "Bash(grep:*)",
      "Bash(curl:*)",
      "Bash(chmod:*)",
      "Bash(~/.claude/go-to-git-root.sh:*)",
      "Bash(source ~/.claude/go-to-git-root.sh:*)",
      "Bash(cd:*)",
      "Bash(~/.claude/api-report.sh:*)",
      "Bash(git rev-parse:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(sleep *)",
      "Bash(git log:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "date +%s > ~/.claude/last_command_start"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/arthurmin/.local/bin/uv run ~/.claude/hooks/macos_notification.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/arthurmin/.local/bin/uv run ~/.claude/hooks/macos_notification.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754026501149
  },
  "model": "sonnet[1m]"
}